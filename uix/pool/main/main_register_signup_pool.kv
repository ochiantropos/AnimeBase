#:import hex kivy.utils.get_color_from_hex

<MainRegisterSignupPool>:
    Card:
        md_bg_color: 1,1,1,1
        elevation: 5
        size_hint: .85, .9
        pos_hint: { "center_x": .5, "center_y": .5}
        radius: [10]
        MDFloatLayout:
            id: images_layout
            size_hint: .9,.6
            pos_hint: {"center_x": .5 , "center_y": 1.1}
            
            Image:
                source: "media//images.png"
                pos_hint: {"center_x": .5 , "center_y": .78}
                size_hint: .9,.6



        MDFloatLayout:
            id: NameLay
            size_hint: .85, .08
            pos_hint: { "center_x": -0.2, "center_y": .52}
            canvas:
                Color: 
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22]
            TextInput:
                hint_text: "nickname"
                size_hint: 1, None
                pos_hint: { "center_x": .5, "center_y": .5}
                multiline: False
                padding: 35

                cursore_color: 57/255, 66/255, 143/255, 1
                cursore_width: "2sp"
                background_color: 0,0,0,0
                font_size: "18sp"
        
        MDFloatLayout:
            id:PasswordLay
            size_hint: .85, .08
            pos_hint: { "center_x": -0.2, "center_y": .41}
            canvas:
                Color: 
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22]
            TextInput:
                hint_text: "password"
                size_hint: 1, None
                pos_hint: { "center_x": .5, "center_y": .5}
                multiline: False
                cursore_color: 57/255, 66/255, 143/255, 1
                cursore_width: "2sp"
                background_color: 0,0,0,0
                padding: 35
                font_size: "18sp"

        MDFloatLayout:
            id:EmailLay
            size_hint: .85, .08
            pos_hint: { "center_x": -0.2, "center_y": .3}
            canvas:
                Color: 
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22]
            TextInput:
                hint_text: "email"
                size_hint: 1, None
                pos_hint: { "center_x": .5, "center_y": .5}
                multiline: False
                cursore_color: 57/255, 66/255, 143/255, 1
                cursore_width: "2sp"
                background_color: 0,0,0,0
                padding: 35
                font_size: "18sp"

        Button:
            id: REGISTERButton
            text: "REGISTER"
            font_size: "18sp"
            size_hint: .4, .08
            pos_hint: { "center_x": .29, "center_y": -0.1}
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_release:
                app.register_process()
            canvas.before: 
                Color:
                    rgb: 11/255, 205/255, 215/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22]
        
        Button:
            id: LOGINButton
            text: "Login"
            font_size: "18sp"
            size_hint: .4, .08
            pos_hint: { "center_x": .72, "center_y": -0.3}
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_release:
                app.root.switch_to(app.screens_ojects[-2], direction='left')

            canvas.before: 
                Color:
                    rgb: 11/255, 205/255, 215/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22]

