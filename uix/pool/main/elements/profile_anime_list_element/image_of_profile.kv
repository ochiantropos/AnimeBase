#:import hex kivy.utils.get_color_from_hex

<RoundedImage>
    pos_hint: {"center_x": .5 , "center_y": .5}
    halign: "center"
    valign: "center"
    size: root.size
    pos: root.pos
    size_hint: 1,1
    canvas.before:
        Color:
            rgba: hex("#C9C9C9")   # visual feedback of press
        RoundedRectangle:
            pos: self.pos[0]-2, self.pos[1] -2
            size: self.size[0]+4, self.size[1]+4
            radius: [2]
        Color:
            rgb: 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            source: 'media/profile.png'
            radius: [2]


<ImageOfProfile>
    id: image_box
    size_hint: .8, .8
    md_bg_color: 1,1,1,1

    pos_hint: {"center_x": .5 , "center_y": .5}
    elevation: 3
    radius: [self.size[0]/2]

    RoundedImage:
        source: "media/profile.png"
        radius: [self.parent.size[0]/2]



