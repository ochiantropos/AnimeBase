#:import hex kivy.utils.get_color_from_hex

<MainFindAnimePool>:
    SearchAnime:
        size_hint_x: 1
        size_hint_y: 0.15
        pos_hint: {"center_x": .5 , "center_y": .92}

    MDFloatLayout:
        pos_hint: {"center_x": .5 , "center_y": .4}
        size_hint_x: .9
        size_hint_y: .86
        MDScrollView:
            pos_hint: {"center_x": .5 , "center_y": .5}
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                id: anime_list_pool
                size_hint: 1,1
                pos_hint: {"center_x": .5 , "center_y": 1}
                GridLayout:
                    cols: 1
                    pos_hint: {"center_x": .5 , "top": 1}
                    id: pool_infor
                    size_hint_x: 0.9
                    height: self.parent.size[1]

                    FindAnimeElementOfList:
                        img_sourse: "media/anime/title_1.png"
                        
                    FindAnimeElementOfList:
                        img_sourse: "media/anime/title_2.png"