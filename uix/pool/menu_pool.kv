#:import hex kivy.utils.get_color_from_hex

<MenuPool>:
    size_hint: .98, .1
    pos_hint: {"center_x": .5, "center_y": .06}
    elevation: 3
    radius: [4]
    canvas.before: 
        Color:
            rgba: hex("ffffff")

        RoundedRectangle:
            radius: self.radius
            pos: self.pos[0], self.pos[1]
            size: self.size[0], self.size[1]


    MDGridLayout:
        cols: 4
        size_hint_x: .9
        pos_hint: {"center_x": .5, "center_y": .5}
        FloatLayout:
            id: nav_icon_one

            size_hint_x: .25
            size_hint_y: .9
            pos_hint: {"center_x": .0, "center_y": .5}

            MDIconButton:
                pos_hint: {"center_x": .5, "center_y": .5}
                icon: "home"
                ripple_scale: 0
                user_font_sizE: "50sp"
                theme_text_color: "Custom"
                text_color: 0,0,0,1
                on_release: 
                    app.swap_screen(0)
                

        FloatLayout:
            id: nav_icon_two

            size_hint_x: .25
            size_hint_y: 0.9
            pos_hint: {"center_x": .25, "center_y": .5}


            MDIconButton:
                pos_hint: {"center_x": .5, "center_y": .5}
                icon: "home"
                ripple_scale: 0
                user_font_sizE: "50sp"
                theme_text_color: "Custom"
                text_color: 0,0,0,1
                on_release: 
                    app.swap_screen(1)

        FloatLayout:
            id: nav_icon_three
    
            size_hint_x: .25
            size_hint_y: 0.9
            pos_hint: {"center_x": .5, "center_y": .5}


            MDIconButton:
                pos_hint: {"center_x": .5, "center_y": .5}
                icon: "home"
                ripple_scale: 0
                user_font_sizE: "50sp"
                theme_text_color: "Custom"
                text_color: 0,0,0,1
                on_release: 
                    app.swap_screen(2)


        FloatLayout:
            id: nav_icon_four
    
            size_hint_x: .25
            size_hint_y: 0.9
            pos_hint: {"center_x": .75, "center_y": .5}


            MDIconButton:
                pos_hint: {"center_x": .5, "center_y": .5}
                icon: "home"
                ripple_scale: 0
                user_font_sizE: "50sp"
                theme_text_color: "Custom"
                text_color: 0,0,0,1
                on_release: 
                    app.swap_screen(3)
